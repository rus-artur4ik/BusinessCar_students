<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="18dp"
    android:background="@drawable/silver_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Название компании" />

    <TextView
        android:id="@+id/employeePosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="9dp"
        android:textColor="@color/accent_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Должность" />

    <TextView
        android:id="@+id/brandName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="9dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="Бренд" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="9dp"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="Адрес места практики" />


    <com.businesscar.studentapp.presentation.SausageButton
        android:id="@+id/moreInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="18dp"
        android:paddingHorizontal="18dp"
        android:paddingVertical="9dp"
        android:text="@string/vacancies_more_info"

        android:textColor="@color/white"
        android:textSize="14sp"
        app:cardBackgroundColor="@color/accent_blue" />

</LinearLayout>